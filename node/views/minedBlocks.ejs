<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Miner</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="../style/css/custom.css"> -->
    <style>
        body {
            padding-top: 54px;
            background-color: white;
        }

        td {
            table-layout:fixed;
            width:20px;
            overflow:hidden;
            word-wrap:break-word;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            text-align: center;
        }

        table {
            text-align: center;
        }

        tr {
            text-align: center;
        }
        
    </style>
</head>


<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="card-body">
                    <h4 class="card-title">Transactions to be added to the next block</h4>
                    <a href="http://127.0.0.1:5500/"><button type="submit" id="refresh_transactions" class="btn btn-primary">
                        Refresh
                    </button></a>

                </div>
            </div>
        </div>
    </div>
    <br>
    <table class="table table-striped" >
        <thead> 
            <tr>
                <th scope="col">#</th>
                <th scope="col">Sender Public Key</th>
                <th scope="col">Recipient Public Key</th>
            </tr>
        </thead>
            <tbody>
                
            </tbody>
        </table>

        <form action='/mine' method="GET">
            <div class="col-lg-12 text-center">
                <input type="submit" id="mine_button" class="btn btn-primary btn-lg" value="Mine">
                <br> <br> <br> <br> <br> <br> <br>
                <br>
            </div>
        </form>
    

    <div class="container">
        <hr>
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="card-body">
                    <h4 class="card-title">Transactions on the blockchain</h4>
                    <a href="http://127.0.0.1:5500/mine?"><button type="submit" id="refresh_blockchain" class="btn btn-primary">
                        Refresh
                    </button></a>
                    <br>
                        <table class="table table-striped" >
                            <thead> 
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Previous Hash</th>
                                    <th scope="col">Time</th>
                                    <th scope="col">Block Number</th>
                                </tr>
                            </thead>
                                <tbody>
                                    <% let counter = 0 %>
                                    <% blocks.forEach(element => {%> 
                                        <tr>
                                            <th scope="row"><%= counter + 1 %></th>
                                            <% counter += 1 %>
                                            <td style="overflow: hidden;"><%= element.dataValues.prev_hash %></td>
                                            <td style="overflow: hidden;"><%= element.dataValues.time %></td>
                                            <td style="overflow: hidden;"><%= element.dataValues.block_num %></td>
                                        </tr>
                                    <%}) %>
                            </tbody>
                        </table>

                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="container">
        <table id="transactions_table" class="table table-bordered"  >                
        </table>
    </div>
</body>
</html>