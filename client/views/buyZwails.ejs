<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://www.paypal.com/sdk/js?client-id=ARLc8ozCBIwOnsir8ZRI_G5hh0h-7EByctzolP1NK_R2IGqR-CeExDkUhmdKle4abPy2kl_FSZ50ob66&components=buttons"></script>
</head>
<body>
    <input type="number" id="amount">
    <div id="paypal"></div>
    <script>
        paypal.Buttons({
  createOrder: function(data, actions) {
    // This function sets up the details of the transaction, including the amount and line item details.
    return actions.order.create({
      purchase_units: [{
        amount: {
          value: '0.01'
        }
      }]
    });
  },
  onApprove: function(data, actions) {
    // This function captures the funds from the transaction.
    return actions.order.capture().then(function(details) {
      // This function shows a transaction success message to your buyer.
      alert('Transaction completed by ' + details.payer.name.given_name);
    });
  }
}).render('#paypal');
//This function displays payment buttons on your web page.render('#paypal');
    </script>
</body>
</html>