            <div class="row">
                <label class="col-sm-2">Recipient Public Key <em>(Optional)</em>:</label>
                <div class="col-sm-10">
                    <input type="text" name="recipient_public_key" id="recipient_public_key" class="form-control">
                </div>
            </div>

            <br>

            <div class="row">
                <label class="col-sm-2">Glimp (more than 10,000 words)</label>
                <div class="col-sm-10">
                    <input type="text" name="upload" id="upload" class="form-control">
                </div>
            </div>

            <br>

            <div class="row">
                <div class="col-sm-12 text-center">
                    <input type="submit" name="publish" id="publish" class="btn btn-primary btn-lg" value="Publish">
                </div>
            </div>

        </form>

      </div>

    </div>
  </div>




    <script src="/style/libraries/jquery/jquery.min.js"></script>
    <script src="/style/libraries/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/style/libraries/DataTables/js/datatables.min.js"></script>
    <script src="/style/libraries/DataTables/js/ellipsis.js"></script>

    <script>
        $(function() {
            $("#publish").click(function() {
                $.ajax({
                    url: "/publish/paper",
                    type: "POST",
                    dataType: 'json',
                    data: $('#publish').serialize(),
                    success: function(response) {
                        console.log(response);
                    },
                    error: function(error) {
                        console.log(error);
                    }


                });

            });

        });

    </script>

